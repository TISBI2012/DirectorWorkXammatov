<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="30px" FontWeight="Bold"/>
            <StackPanel>
                <TextBlock Text="Логин" />
                <TextBox Background="#c4bebe" Name="TBUserLogin" Margin="0 10"/>
                <TextBlock Text="Пороль"/>
                <PasswordBox Background="#c4bebe" Margin="0 10 0 0" Name="PBUserPassword"/>
                <Grid Margin=" 0 10">
                    <Button Content="Войти" Name="BLogin" Click="BLogin_Click" HorizontalAlignment="Left"/>
                    <Button Content="Регистрация" Name="BReg" Click="BReg_Click" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
            
        </StackPanel>
        <Frame Name="FirstFrame"/>
    </Grid>
</Window>
